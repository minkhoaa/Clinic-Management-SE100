# Copy this file to .env and fill in your values

# Database
CONNECTIONSTRINGS__CLINIC_DB=Host=clinic-database;Port=5432;Database=clinic-db;Username=clinic;Password=clinic

# JWT Settings
JWTSETTINGS__KEY=your-32-character-secret-key-here
JWTSETTINGS__ISSUER=ClinicApi
JWTSETTINGS__AUDIENCE=ClinicApiClient

# VNPay
VNPAY__TMNCODE=YOUR_TMN_CODE
VNPAY__HASHSECRET=YOUR_HASH_SECRET
VNPAY__PAYMENTURL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY__RETURNURL=http://localhost:3000/payment/result
VNPAY__IPNURL=http://your-domain.com/api/vnpay/ipn
VNPAY__LOCALE=vn

# Email
EMAIL__SMTPHOST=smtp.gmail.com
EMAIL__SMTPPORT=587
EMAIL__USERNAME=your-email@gmail.com
EMAIL__PASSWORD=your-app-password
EMAIL__FROMNAME=Clinic Management
EMAIL__FROMEMAIL=noreply@clinic.com
EMAIL__FRONTENDBASEURL=http://localhost:3000
