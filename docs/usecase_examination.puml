@startuml

' ========== THESIS STANDARD CONFIGURATION ==========
skinparam handwritten false
skinparam shadowing false
skinparam packageStyle rectangle
skinparam defaultFontName Arial
skinparam defaultFontSize 12

skinparam usecase {
    BackgroundColor White
    BorderColor Black
    ArrowColor Black
}

skinparam actor {
    BorderColor Black
    BackgroundColor White
}

skinparam rectangle {
    BorderColor Black
    BackgroundColor White
}

left to right direction

title Sơ đồ Use Case - Module Khám và Điều trị

' ========== ACTORS ==========
actor "Nha sĩ" as Doctor
actor "Lễ tân" as Receptionist

' ========== SYSTEM BOUNDARY ==========
rectangle "Module Khám và Điều trị" {
    
    usecase "Xem hàng đợi bệnh nhân" as UC_ViewQueue
    usecase "Bắt đầu khám" as UC_StartExam
    usecase "Xem lịch sử khám" as UC_ViewHistory
    usecase "Chẩn đoán tình trạng răng" as UC_Diagnosis
    usecase "Ghi nhận điều trị" as UC_Treatment
    usecase "Ghi nhận số răng điều trị" as UC_ToothNumber
    usecase "Cập nhật trạng thái răng" as UC_ToothStatus
    usecase "Kê đơn thuốc" as UC_Prescription
    usecase "Chọn mẫu đơn thuốc" as UC_Template
    usecase "Tạo hồ sơ bệnh án" as UC_CreateRecord
    usecase "Đính kèm hình ảnh X-ray" as UC_Attachment
    usecase "Hoàn thành khám" as UC_Complete
}

' ========== ASSOCIATIONS ==========

Doctor --> UC_ViewQueue
Doctor --> UC_StartExam
Doctor --> UC_ViewHistory
Doctor --> UC_Diagnosis
Doctor --> UC_Treatment
Doctor --> UC_Prescription
Doctor --> UC_CreateRecord
Doctor --> UC_Attachment
Doctor --> UC_Complete

Receptionist --> UC_ViewQueue

' ========== RELATIONSHIPS ==========

UC_StartExam ..> UC_ViewHistory : <<include>>
UC_Diagnosis ..> UC_ToothNumber : <<include>>
UC_Diagnosis ..> UC_ToothStatus : <<include>>
UC_Treatment ..> UC_ToothNumber : <<include>>
UC_Prescription ..> UC_Template : <<extend>>
UC_CreateRecord ..> UC_Diagnosis : <<include>>
UC_CreateRecord ..> UC_Treatment : <<include>>
UC_CreateRecord ..> UC_Attachment : <<extend>>
UC_Complete ..> UC_CreateRecord : <<include>>

@enduml
