@startuml

' ========== THESIS STANDARD CONFIGURATION ==========
skinparam handwritten false
skinparam shadowing false
skinparam packageStyle rectangle
skinparam defaultFontName Arial
skinparam defaultFontSize 12

skinparam usecase {
    BackgroundColor White
    BorderColor Black
    ArrowColor Black
}

skinparam actor {
    BorderColor Black
    BackgroundColor White
}

skinparam rectangle {
    BorderColor Black
    BackgroundColor White
}

left to right direction

title Sơ đồ Use Case Tổng quát - Hệ thống Quản lý Phòng khám Nha khoa

' ========== ACTORS ==========
actor "Bệnh nhân" as Patient
actor "Lễ tân" as Receptionist
actor "Nha sĩ" as Doctor
actor "Quản lý" as Admin

' ========== SYSTEM BOUNDARY ==========
rectangle "Hệ thống Quản lý Phòng khám Nha khoa" {
    
    ' --- Booking ---
    usecase "Đặt lịch hẹn" as UC_Book
    usecase "Xem lịch trống" as UC_ViewSlot
    usecase "Hủy lịch hẹn" as UC_Cancel
    usecase "Dời lịch hẹn" as UC_Reschedule
    usecase "Xác nhận lịch hẹn" as UC_Confirm
    
    ' --- Reception ---
    usecase "Tiếp nhận bệnh nhân" as UC_Checkin
    usecase "Quản lý hàng đợi" as UC_Queue
    usecase "Tạo hồ sơ bệnh nhân" as UC_CreatePatient
    
    ' --- Examination ---
    usecase "Khám bệnh nhân" as UC_Exam
    usecase "Chẩn đoán tình trạng răng" as UC_Diagnosis
    usecase "Kê đơn thuốc" as UC_Prescription
    usecase "Tạo hồ sơ bệnh án" as UC_CreateRecord
    
    ' --- Billing ---
    usecase "Tạo hóa đơn" as UC_CreateBill
    usecase "Thanh toán hóa đơn" as UC_Pay
    
    ' --- Admin ---
    usecase "Quản lý nha sĩ" as UC_ManageDoctor
    usecase "Quản lý dịch vụ" as UC_ManageService
    usecase "Quản lý thuốc" as UC_ManageMedicine
    usecase "Xem báo cáo thống kê" as UC_Report
}

' ========== ASSOCIATIONS ==========

' Patient
Patient --> UC_Book
Patient --> UC_ViewSlot
Patient --> UC_Cancel
Patient --> UC_Reschedule

' Receptionist
Receptionist --> UC_Confirm
Receptionist --> UC_Checkin
Receptionist --> UC_Queue
Receptionist --> UC_CreatePatient
Receptionist --> UC_CreateBill
Receptionist --> UC_Pay

' Doctor
Doctor --> UC_Exam
Doctor --> UC_Diagnosis
Doctor --> UC_Prescription
Doctor --> UC_CreateRecord

' Admin
Admin --> UC_ManageDoctor
Admin --> UC_ManageService
Admin --> UC_ManageMedicine
Admin --> UC_Report

' ========== RELATIONSHIPS ==========

UC_Book ..> UC_ViewSlot : <<include>>
UC_Checkin ..> UC_Queue : <<include>>
UC_Exam ..> UC_Diagnosis : <<include>>
UC_Exam ..> UC_CreateRecord : <<include>>
UC_CreateRecord ..> UC_CreateBill : <<extend>>
UC_Diagnosis ..> UC_Prescription : <<extend>>

@enduml
