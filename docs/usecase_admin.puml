@startuml

' ========== THESIS STANDARD CONFIGURATION ==========
skinparam handwritten false
skinparam shadowing false
skinparam packageStyle rectangle
skinparam defaultFontName Arial
skinparam defaultFontSize 12

skinparam usecase {
    BackgroundColor White
    BorderColor Black
    ArrowColor Black
}

skinparam actor {
    BorderColor Black
    BackgroundColor White
}

skinparam rectangle {
    BorderColor Black
    BackgroundColor White
}

left to right direction

title Sơ đồ Use Case - Module Quản trị

' ========== ACTORS ==========
actor "Quản lý" as Admin
actor "Lễ tân" as Receptionist

' ========== SYSTEM BOUNDARY ==========
rectangle "Module Quản trị" {
    
    ' --- Staff Management ---
    usecase "Quản lý nha sĩ" as UC_ManageDoctor
    usecase "Thêm nha sĩ" as UC_AddDoctor
    usecase "Cập nhật thông tin nha sĩ" as UC_UpdateDoctor
    usecase "Quản lý lịch làm việc" as UC_Schedule
    usecase "Đăng ký nghỉ phép" as UC_TimeOff
    usecase "Quản lý nhân viên" as UC_ManageStaff
    
    ' --- Service Management ---
    usecase "Quản lý dịch vụ nha khoa" as UC_ManageService
    usecase "Quản lý thuốc" as UC_ManageMedicine
    usecase "Quản lý mẫu đơn thuốc" as UC_ManageTemplate
    usecase "Phân công dịch vụ cho nha sĩ" as UC_AssignService
    
    ' --- Reporting ---
    usecase "Xem bảng điều khiển" as UC_Dashboard
    usecase "Xem báo cáo doanh thu" as UC_Revenue
    usecase "Xem báo cáo bệnh nhân" as UC_PatientReport
    usecase "Xem báo cáo lịch hẹn" as UC_AppointmentReport
    
    ' --- Clinic ---
    usecase "Cập nhật thông tin phòng khám" as UC_ClinicInfo
    usecase "Quản lý đánh giá" as UC_Reviews
}

' ========== ASSOCIATIONS ==========

Admin --> UC_ManageDoctor
Admin --> UC_ManageStaff
Admin --> UC_ManageService
Admin --> UC_ManageMedicine
Admin --> UC_ManageTemplate
Admin --> UC_Dashboard
Admin --> UC_Revenue
Admin --> UC_PatientReport
Admin --> UC_AppointmentReport
Admin --> UC_ClinicInfo
Admin --> UC_Reviews

Receptionist --> UC_TimeOff
Receptionist --> UC_Schedule

' ========== RELATIONSHIPS ==========

UC_ManageDoctor ..> UC_AddDoctor : <<include>>
UC_ManageDoctor ..> UC_UpdateDoctor : <<include>>
UC_ManageDoctor ..> UC_Schedule : <<include>>
UC_ManageDoctor ..> UC_AssignService : <<include>>

@enduml
